<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".FirstActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="70dp"
    >
    <Button
        android:id="@+id/regular"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Regular health Tips"
        android:onClick="regular"
        android:background="#f9443d"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/diabetes"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="9 Ways to Avoid Diabetes "
        android:onClick="diabetes"
        android:background="#f9443d"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/eat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="3-Day Heart-Healthy Meal Plan"
        android:onClick="eat"
        android:background="#f9443d"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/workout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="5-minutes workout"
        android:onClick="workout"
        android:background="#f9443d"
        />
</LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/firstadView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2058926917596778/1278109266">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>